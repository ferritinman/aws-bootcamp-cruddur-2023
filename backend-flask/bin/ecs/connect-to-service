#!/usr/bin/bash

# Gets the ECS Task ARN
#  aws ecs list-tasks --cluster cruddur
#
# Parse out the ARN for the last section

if [ -z "$1" ]
then
  echo "No TASK_ID argument supplied eg  ./bin/ecs/connect-to-service _#task_id#_ backend-flask"
  exit 1
fi
TASK_ID=$1


if [ -z "$2" ]
then
  echo "No CONTAINER_NAME  argument supplied eg  ./bin/ecs/connect-to-service _#task_id#_ backend-flask"
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive